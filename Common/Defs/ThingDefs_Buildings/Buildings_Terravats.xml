<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="BuildingBase">
    <defName>TS_TerravatBasic</defName>
    <label>Small Terravat</label>
    <description>An organic wooden growth that sustains an accessible sap chamber, designed for Terratech experimentation and evolution. Twice a season, this vat will utilize the glowsap within, and will "advance" the various items within into another form. This unlocks security measures that Terratech might employ, or even advance it into a unique, more powerful variant.</description>
    <size>(1,1)</size>
    <graphicData>
      <texPath>Things/Building/Terravats/VatGlowsap</texPath>
      <graphicClass>Graphic_Random</graphicClass>
      <shaderType>TransparentPostLight</shaderType>
      <drawSize>(2,2)</drawSize>
      <drawOffset>(0,0,0.3)</drawOffset>
      <drawRotated>false</drawRotated>
      <damageData>
        <rect>(0.3,0,2.7,1)</rect>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <statBases>
      <WorkToBuild>600</WorkToBuild>
      <Mass>10</Mass>
      <MaxHitPoints>100</MaxHitPoints>
      <Flammability>1.0</Flammability>
    </statBases>
    <costList>
      <WoodLog>80</WoodLog>
      <TS_Glowsap>30</TS_Glowsap>
    </costList>
    <placeWorkers>
      <li>PlaceWorker_ShowFacilitiesConnections</li>
      <li>PlaceWorker_PreventInteractionSpotOverlap</li>
    </placeWorkers>
    <constructionSkillPrerequisite>3</constructionSkillPrerequisite>
    <fillPercent>0.5</fillPercent>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <hasInteractionCell>true</hasInteractionCell>
    <designationCategory>TerratechDesignation</designationCategory>
    <uiIconScale>0.5</uiIconScale>
    <maxTechLevelToBuild>Medieval</maxTechLevelToBuild>
    <researchPrerequisites>
      <li>TS_Terravats</li>
    </researchPrerequisites>
    <drawerType>MapMeshAndRealTime</drawerType>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <pathCost>42</pathCost>
    <!--<thingCategories>
      <li>BuildingsProduction</li>
    </thingCategories>-->
    <surfaceType>Item</surfaceType>
    <killedLeavings>
      <WoodLog>12</WoodLog>
    </killedLeavings>
    <building>
      <deconstructible>false</deconstructible>
      <artificialForMeditationPurposes>false</artificialForMeditationPurposes>
      <buildingTags>
        <li>Production</li>
      </buildingTags>
      <destroySound>BuildingDestroyed_Wood_Small</destroySound>
    </building>
    <tickerType>Rare</tickerType>
    <rotatable>true</rotatable>
    <uiOrder>2710</uiOrder>
    <comps>
      <li Class="CompProperties_Glower">
        <glowRadius>3.9</glowRadius>
        <glowColor>(239,84,203,0)</glowColor>
      </li>
      <li Class="CompProperties_Facility">
        <statOffsets>
          <ResearchSpeedFactor>0.1</ResearchSpeedFactor>
        </statOffsets>
        <maxSimultaneous>1</maxSimultaneous>
        <maxDistance>9</maxDistance>
      </li>
      <li Class="CompProperties_Art">
        <canBeEnjoyedAsArt>true</canBeEnjoyedAsArt>
      </li>
      <li Class="Terrasecurity.ThingCompProperties_MonoThingContainer">
        <!-- max fuel-->
        <stackLimit>50</stackLimit>
        <drawContainedThing>false</drawContainedThing>
      </li>
      <li Class="Terrasecurity.ThingCompProperties_SlottedThingTransformer">
        <!-- this *might* look okay, but probably won't. Will probably only ever draw slot 0 -->
        <drawContainedThing>false</drawContainedThing>
        <baseFuelColor>(56,204,220)</baseFuelColor>
        <insufficientFuelColor>(168,60,50)</insufficientFuelColor>
        <sufficientFuelColor>(33,209,69)</sufficientFuelColor>
        <!-- how long it takes a pawn to put a thing into a slot -->
        <timeToInsertTicks>100</timeToInsertTicks>
        <!-- the ticks to wait for until a transformation cycle starts (does NOT include cycle duration! -->
        <transformationCycleIntervalTicks>3000</transformationCycleIntervalTicks>
        <!-- the ticks to lock input/output for while doing a transformation -->
        <transformationCycleTicks>1500</transformationCycleTicks>
        <!-- each thingDef listed here must have a ThingDefExtension_TransformerRecipe on it -->
        <validFuelThings>
          <li>TS_Glowsap</li>
        </validFuelThings>
        <!-- gizmo width adapts to the slot count automatically -->
        <transformerSlots>2</transformerSlots>
      </li>
    </comps>
  </ThingDef>
</Defs>